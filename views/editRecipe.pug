extends layout

block content
    h1(style='color: red') Edit 
        span(style='color:grey') #{recipe.name} 

    
    form(method='POST',action='/recipe/single/edit/'+recipe.id)
        lable Description:  
        textarea(name="description", cols="30", rows="5")
        br
        br
        lable Difficulty: 
        input(name='difficulty', type='number',step='.01')
        br
        br
        lable Ingredients: 
        textarea(name="ingredients", cols="30", rows="5")
        br
        br
        lable Steps: 
        textarea(name="steps", cols="30", rows="5")
        br
        br
        input(type='submit',value='Modify')

       
